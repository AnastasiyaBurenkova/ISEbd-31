
@{
    ViewBag.Title = "Uslugis";
}



@model IEnumerable<WeCrossroad.Service.Abstract.BaseEntity>
@{
    Layout = null;
}


<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <title>Crossroad</title>
    <link rel="stylesheet" href="~/Content/styles.css" type="text/css" />
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Oswald:400,300" type="text/css" />

    <title>Выравнивание фотографии по центру</title>
</head>




<style>
    .fig {
        text-align: center; /* Выравнивание по центру */
    }


    .center {
        width: 700px; /* Ширина элемента в пикселах */
        padding: 10px; /* Поля вокруг текста */
        margin: auto; /* Выравниваем по центру */
    }
</style>


<p class="fig">
    <img src="~/img/CY2NYGSv.jpg"
         width="1263" height="320" alt="Фотография">
</p>

<div class="center">
    <nav>
        <ul class="top-menu">
            <li><a href="~/Home/Index">ГЛАВНАЯ</a></li>
            <li><a href="~/Home/About">О НАС</a></li>
            <li><a href="~/Home/Contact">КОНТАКТЫ</a></li>
        </ul>
    </nav>
</div>
<aside>
    <nav>
        <ul class="aside-menu">
            <li><a href="~/Home/Table">ЦЕНЫ</a></li>
            <li><a href="~/Home/Cari">УСЛУГИ</a></li>
            
        </ul>
    </nav>
</aside>



<div class="center">
    <h2>Услуги</h2>


    @{ var grid = new WebGrid(Model); }
    <div>
        @grid.GetHtml(columns: grid.Columns(
                                                grid.Column("Id", "№"),
                                                grid.Column("Day", "День"),
                                                grid.Column("Month", "Месяц"),
                                                grid.Column("Sum", "Сумма"),
                                                grid.Column("Comment", "Комментарий"),
                                                grid.Column("Редактировать", format: @<a href="~/Uslugi/EditUslugi/@item.Id"> Редактировать</a>),
                                                             grid.Column("Удалить", format: @<a href="~/Uslugi/DeleteUslugi/@item.Id"> Удалить</a>)
                                                                     ), tableStyle: "table-bordered")
    </div>
    <input type="button" value="Добавить" onClick='location.href="CreateUslugi"'>

</div>
